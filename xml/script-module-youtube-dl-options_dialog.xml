<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">100</defaultcontrol>
	<include>Animation_DialogPopupOpenClose</include>
	<controls>
		<control type="group">
			<centerleft>50%</centerleft>
			<width>620</width>
			<centertop>50%</centertop>
			<height>510</height>
			<include content="DialogBackgroundCommons">
				<param name="width" value="620" />
				<param name="height" value="510" />
				<param name="header_label" value="YouTube DL" />
				<param name="header_id" value="1" />
			</include>
			<control type="grouplist" id="100">
				<description>Grouplist For Context Buttons</description>
				<left>10</left>
				<top>80</top>
				<width>600</width>
				<height max="400">auto</height>
				<itemgap>dialogbuttons_itemgap</itemgap>
				<control type="button" id="200">
					<description>Stop Current Download</description>
					<enable>String.IsEqual(Window(10000).Property(script.module.youtube.dl_STATUS),ACTIVE)</enable>
					<width>600</width>
					<height>100</height>
					<font>font25_title</font>
					<textoffsetx>20</textoffsetx>
					<wrapmultiline>false</wrapmultiline>
					<align>center</align>
					<texturefocus border="40" colordiffuse="$VAR[MainColorVar]">buttons/dialogbutton-fo.png</texturefocus>
					<texturenofocus border="40">buttons/dialogbutton-nofo.png</texturenofocus>
					<label>$ADDON[script.module.youtube.dl 32030]</label>
				</control>
				<control type="button" id="201">
					<description>Stop All Downloads</description>
					<enable>String.IsEqual(Window(10000).Property(script.module.youtube.dl_STATUS),ACTIVE)</enable>
					<width>600</width>
					<height>100</height>
					<font>font25_title</font>
					<textoffsetx>20</textoffsetx>
					<wrapmultiline>false</wrapmultiline>
					<align>center</align>
					<texturefocus border="40" colordiffuse="$VAR[MainColorVar]">buttons/dialogbutton-fo.png</texturefocus>
					<texturenofocus border="40">buttons/dialogbutton-nofo.png</texturenofocus>
					<label>$ADDON[script.module.youtube.dl 32031]</label>
				</control>
				<control type="button" id="202">
					<description>Manage Queue</description>
					<enable>String.IsEqual(Window(10000).Property(script.module.youtube.dl_STATUS),ACTIVE) + IntegerGreaterThan(Window(10000).property(XBMCJsonRAFifoQueue_download.queue.size),0)</enable>
					<width>600</width>
					<height>100</height>
					<font>font25_title</font>
					<textoffsetx>20</textoffsetx>
					<wrapmultiline>false</wrapmultiline>
					<align>center</align>
					<texturefocus border="40" colordiffuse="$VAR[MainColorVar]">buttons/dialogbutton-fo.png</texturefocus>
					<texturenofocus border="40">buttons/dialogbutton-nofo.png</texturenofocus>
					<label>$ADDON[script.module.youtube.dl 32032] ($INFO[Window(10000).property(XBMCJsonRAFifoQueue_download.queue.size)])</label>
				</control>
				<control type="button" id="203">
					<description>Download Currently Playing Video</description>
					<enable>Player.HasVideo + !IsEmpty(Window(10000).Property(script.module.youtube.dl_VALID))</enable>
					<width>600</width>
					<height>100</height>
					<font>font25_title</font>
					<textoffsetx>20</textoffsetx>
					<wrapmultiline>false</wrapmultiline>
					<align>center</align>
					<texturefocus border="40" colordiffuse="$VAR[MainColorVar]">buttons/dialogbutton-fo.png</texturefocus>
					<texturenofocus border="40">buttons/dialogbutton-nofo.png</texturenofocus>
					<label>$ADDON[script.module.youtube.dl 32033]</label>
				</control>
				<control type="button" id="204">
					<description>Settings</description>
					<width>600</width>
					<height>100</height>
					<font>font25_title</font>
					<textoffsetx>20</textoffsetx>
					<wrapmultiline>false</wrapmultiline>
					<align>center</align>
					<texturefocus border="40" colordiffuse="$VAR[MainColorVar]">buttons/dialogbutton-fo.png</texturefocus>
					<texturenofocus border="40">buttons/dialogbutton-nofo.png</texturenofocus>
					<label>$ADDON[script.module.youtube.dl 32034]</label>
				</control>
			</control>
		</control>
	</controls>
</window>
