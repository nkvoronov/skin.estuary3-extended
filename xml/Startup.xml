<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">8000</defaultcontrol>
	<controls>
		<control type="videowindow">
			<description>Video Control For Splash</description>
			<include>FullScreenDimensions</include>
		</control>
		<control type="image">
			<description>Image Control For Splash</description>
			<include>FullScreenDimensions</include>
			<aspectratio>scale</aspectratio>
			<texture background="true">$INFO[Window(Home).Property(SkinUtils.SplashScreen)]</texture>
		</control>
		<control type="button" id="8000">
			<onfocus condition="Skin.HasSetting(enablesplashscreen)">ReplaceWindow($INFO[System.StartupWindow])</onfocus>
			<onfocus condition="Skin.String(splashscreenpath) + !Skin.HasSetting(enablesplashscreen)">RunScript(script.skin.utils,action=splashscreen,file=$INFO[Skin.String(splashscreenpath)],duration=$VAR[splashscreendurationNameVar])</onfocus>
			<onfocus condition="!Skin.String(splashscreenpath) + !Skin.HasSetting(enablesplashscreen)">AlarmClock(GoHome,ReplaceWindow($INFO[System.StartupWindow]),00:01,silent,false)</onfocus>
			<visible allowhiddenfocus="true">false</visible>
		</control>
	</controls>
</window>
